@model RegisterModel
@{
    Layout = "_LoginLayout";
}

@section Style{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">
}

<div class="container">
    <div class="row">
        <div class="col-md-4 mx-auto pt-5">
            <div class="card text-center border-0" style="background: linear-gradient(45deg,rgb(13, 202, 240),rgb(88, 83, 83), rgb(13, 202, 240)); ">
                <div class="card-header d-flex">
                    <p class="display-6 text-light">Kayıt Sayfası</p>
                    <a asp-action="Login" asp-controller="Home" class="ms-auto"><i class="bi bi-x-circle-fill  text-light"></i></a>
                </div>
                <div class="card-body">
                    <form asp-action="Register" asp-controller="Home" method="post">
                        <div class="text-danger" asp-validation-summary="All"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="UserName" type="text" class="form-control" id="kullaniciAdi" placeholder=".">
                            <label for="kullaniciAdi">Kullanıcı Adı</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="TcKimlik" type="number" class="form-control" id="tcKimlik" placeholder=".">
                            <label for="tcKimlik">Tc</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Email" type="email" class="form-control" id="email" placeholder=".">
                            <label for="email">E-Mail</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Password" type="password" class="form-control" id="sifre" placeholder=".">
                            <label for="sifre">Parola</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="RePassword" type="password" class="form-control" id="sifreTekrar" placeholder=".">
                            <label for="sifre">Parola Tekrar</label>
                        </div>
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-outline-light w-100">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
}